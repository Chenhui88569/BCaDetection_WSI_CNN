import cv2
import os 
from sklearn.preprocessing import *
from numpy import clip

#This function was not used eventually.

def ColorSpaceTransformaton_Standardization_Normalization(image):

    #for dirname in os.listdir(augment_TCGA_pos):
    #image = cv2.imread(os.path.join(augment_TCGA_pos,dirname))
    image_YUV = cv2.cvtColor(image,cv2.COLOR_RGB2YUV) 
    image_YUV_mean, image_YUV_std = image_YUV.mean(),image_YUV.std()
    img_standardized = (image_YUV  - image_YUV_mean) / image_YUV_std # to zero mean and unit variance
    # clip pixel values to [-1,1]
    img_standardized = clip(img_standardized, -1.0, 1.0)
    # shift from [-1,1] to [0,1] with 0.5 mean
    img_normed = (img_standardized  + 1.0) / 2.0  # do standardization for three channels together
    return img_normed
